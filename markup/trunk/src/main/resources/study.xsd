<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns="http://www.w3.org/2001/XMLSchema" xmlns:tns="http://david.moten/markup/xml/study.xsd" targetNamespace="http://david.moten/markup/xml/study.xsd">
    
    <complexType name="study">
    	<sequence>
    		<element name="tag" type="tns:tag" maxOccurs="unbounded" minOccurs="0"></element>
    		<element name="document" type="tns:document"
    			maxOccurs="unbounded" minOccurs="0">
    		</element>
    	</sequence>
    	<attribute name="name" type="string"></attribute>
    </complexType>
    
    

    <complexType name="documentTag">
    	<sequence>
    		<element name="value" type="tns:basicValue"></element>
    	</sequence>
    	<attribute name="id" type="string" use="required"></attribute>
    	<attribute name="start" type="int" use="required"></attribute>
    	<attribute name="finish" type="int" use="required"></attribute>
    </complexType>

    <complexType name="document">
    	<sequence>
    		<element name="property" type="tns:property"
    			maxOccurs="unbounded" minOccurs="0">
    		</element>
    		<element name="tag" type="tns:documentTag" maxOccurs="unbounded"
    			minOccurs="0">
    		</element>
    	</sequence>

    	<attribute name="name" type="string" use="required"></attribute>
    </complexType>

    <simpleType name="basicType">
    	<restriction base="string">
    		<enumeration value="text"></enumeration>
    		<enumeration value="boolean"></enumeration>
    		<enumeration value="number"></enumeration>
    	</restriction>
    </simpleType>


    <complexType name="property">
    	<attribute name="name" type="string" use="required"></attribute>
    	<attribute name="type" type="tns:basicType"></attribute>
    	<attribute name="value" type="string"></attribute>
    </complexType>
    
    <complexType name="basicValue">
    	<choice>
    		<element name="boolean" type="boolean"></element>
    		<element name="text" type="string"></element>
    		<element name="number" type="decimal"></element>
    	</choice>
    </complexType>

    <complexType name="tag">
    	<attribute name="id" type="int" use="required"></attribute>
    	<attribute name="name" type="string" use="required"></attribute>
    	<attribute name="type" type="tns:basicType" use="required"></attribute>
    </complexType>
</schema>